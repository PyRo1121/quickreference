{
  "env": {
    "browser": true,
    "es2021": true
  },
  "plugins": ["solid"],
  "extends": [
    "eslint:recommended",
    "plugin:solid/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "solid/reactivity": "warn",
    "solid/no-destructure": "warn",
    "solid/jsx-no-undef": "error",
    "no-unused-vars": "warn",
    "eqeqeq": "warn",
    "curly": "warn",
    "semi": ["warn", "always"],
    "indent": ["warn", 2]
  }
}
