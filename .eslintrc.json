{
  "env": {
    "browser": true,
    "es2021": true
  },
  "plugins": ["solid"],
  "extends": ["eslint:recommended", "plugin:solid/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "solid/reactivity": "warn",
    "solid/no-destructure": "warn",
    "solid/jsx-no-undef": "error",
    "no-unused-vars": "warn",
    "no-undef": "off",
    "eqeqeq": "warn",
    "curly": "warn",
    "semi": ["warn", "always"],
    "indent": ["warn", 2]
  }
}
